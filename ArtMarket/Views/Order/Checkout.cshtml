
@{
    ViewBag.Title = "Checkout";
}

@model Common.Entities.Order

<h1>Orden Generada #@Model.OrderNumber</h1>

<div>

<b>Fecha: </b> @Model.OrderDate <br>
<b>Cantidad: </b> @Model.ItemCount <br>
<b>Total: $</b> @Model.TotalPrice <br>

</div>

<h2>Detalle de la Orden</h2>

    <div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.FirstOrDefault().ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.FirstOrDefault().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.FirstOrDefault().Price)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Price)
                    </td>
                </tr>
            }

        </table>
        <div>
            <button type="button" class="button-principal" onclick="location.href='@Url.Action("Index", "Home")'">Inicio</button>
        </div>
    </div>

