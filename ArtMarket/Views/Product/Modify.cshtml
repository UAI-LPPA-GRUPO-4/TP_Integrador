@using Common.Entities;
@model Product
@{
    ViewBag.Title = "Modificar producto";
}
<div class="container">
    <h2>Modificar producto</h2>

    <form method="post" action="/Product/DoUpdate">
        <label for="title">Título</label>
        <div>
            <input type="text" class="form-control" id="title" name="title" value="@Model.Title" placeholder="">
        </div>
        <label for="description">Descripción</label>
        <div>
            <input type="text" class="form-control" id="description" name="description" value="@Model.Description" placeholder="">
        </div>
        <label for="artistId">Artista</label>
        <div>
            @Html.DropDownList("ArtistId", ViewBag.ArtistList as IEnumerable<SelectListItem>)
        </div>
        <label for="quantitySold">Cantidad vendida</label>
        <div>
            <input type="number" class="form-control" id="quantitySold" name="quantitySold" min="0" max="1000" value="@Model.QuantitySold">
        </div>
        <label for="avgStars">Calificación promedio (entre 1 y 5)</label>
        <div>
            <input type="number" class="form-control" id="avgStars" name="avgStars" min="1" max="5" step="0.25" value="@Model.AvgStars">
        </div>
        <label for="image">Imagen</label>
        <div>
            <p class="small-text">Archivo actual: @(Model.Image ?? "ninguno")</p>
            <input type="file" class="form-control-file" id="image" name="image" accept="image/*">
        </div>
        <label for="price">Precio ($)</label>
        <div>
            <input type="number" class="form-control" id="price" name="price" min="10" max="1000" step="10" value="@Model.Price">
        </div>

        @Html.HiddenFor(model => model.Id)

        <button type="submit" class="btn button-success color-success">Guardar cambios</button>
    </form>
</div>